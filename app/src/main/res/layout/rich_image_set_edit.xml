<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#ffdddddd"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="32dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="4dp"
                    android:textStyle="bold"
                    android:text="@string/image_set_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/pager_text"
                    android:layout_margin="4dp"
                    android:textStyle="bold"
                    android:text="1/29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/btn_add_img"
                    android:layout_margin="4dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:background="@drawable/select_button_gray"
                    android:text="@string/add"
                    android:layout_width="64dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/btn_del_img"
                    android:background="@drawable/select_button_gray"
                    android:clickable="true"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="240dp" />


        </LinearLayout>
        <FrameLayout
            android:layout_alignParentRight="true"
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffdddddd"
            android:minWidth="@dimen/btn_topbar_layout_minwidth" >
            <ImageView


                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:src="@drawable/close5"

                android:background="#ffdddddd" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>

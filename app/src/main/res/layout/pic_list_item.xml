<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_item_bg"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:clickable="true"
    android:padding="2dp" >

    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:clickable="true"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/item_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.youkes.vr.widget.waterfall.widget.ScaleImageView
                android:id="@+id/pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@null" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/item_image_gif"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_play_gif" />
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:singleLine="true"
            android:textColor="#656565" />
    </LinearLayout>

    <View
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffdddddd" />
    <LinearLayout
        android:id="@+id/user_info_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/photo"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_margin="4dip"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="4dip"
                android:layout_marginTop="4dip"
                android:clickable="true"
                android:minWidth="32dp"
                android:textColor="@color/gray_dark_blue"
                android:textSize="14sp" />

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="4dip"
                    android:layout_marginTop="4dip"
                    android:clickable="true"
                    android:minWidth="32dp"
                    android:textColor="@color/gray_light"
                    android:text="@string/delete"
                    android:visibility="gone"
                    android:textSize="12sp" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/albumName"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="4dip"
                    android:layout_marginTop="2dip"
                    android:clickable="true"
                    android:minWidth="32dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_dark_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tag0"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="4dip"
                    android:layout_marginTop="2dip"
                    android:clickable="true"
                    android:minWidth="32dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_dark_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="4dip"
                    android:layout_marginTop="2dip"
                    android:clickable="true"
                    android:minWidth="32dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_dark_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="4dip"
                    android:layout_marginTop="2dip"
                    android:clickable="true"
                    android:minWidth="32dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_dark_blue"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
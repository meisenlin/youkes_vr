<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >


    <EditText
        android:id="@+id/name_edit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:hint="@string/hint_title"

       android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

            <EditText
                android:id="@+id/desc_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:background="#eee"
                android:gravity="top"
                android:hint="@string/hint_desc"
                android:minHeight="120dp"
                android:textColor="#000"
                android:textSize="15sp" />

    <Button
        android:id="@+id/add_tags_btn"
        style="@style/CCPBigGreenButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:text="@string/tags_add"
        android:textSize="12sp" />

    <com.youkes.vr.ui.view.TagsView
        android:id="@+id/tags_list"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.youkes.vr.ui.view.TagsView>

    <Button
        android:id="@+id/add_img_btn"
        style="@style/CCPBigGreenButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:text="@string/cover_set"
        android:textSize="12sp" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#ffdddddd"
        android:orientation="horizontal" >


    <ImageView
        android:id="@+id/img_view"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"

        android:clickable="true"
        android:layout_height="200dp" />
    <TextView

        android:padding="8dp"
        android:textStyle="bold"
        android:background="@color/semitransparent_light"
        android:text="@string/video"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/video_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:background="#00000000"
        android:contentDescription="@string/play_ptt"
        android:gravity="center"
        android:src="@drawable/mediacontroller_play_button" />
    </RelativeLayout>


    <TextView
        android:id="@+id/link_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:padding="8dp"
        android:background="#eee"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:hint="@string/empty"

        android:textSize="12sp" />

</LinearLayout>
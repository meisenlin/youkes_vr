<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/control_bar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:padding="2dip" >


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:padding="2dip" >

                <ImageView
                    android:id="@+id/book_detail_img_view"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:padding="2dip" >
                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dip"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/props_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dip"
                        android:textColor="@color/gray"
                        android:text=""
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                
                android:padding="2dip" >

                <TextView
                    android:id="@+id/item_link_0"
                    style="@style/item_share_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:id="@+id/item_link_1"
                    style="@style/item_share_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:id="@+id/item_link_2"
                    style="@style/item_share_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:id="@+id/item_link_3"
                    style="@style/item_share_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>

            <Button
                android:id="@+id/buy_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/book"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinner_book_read_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/book_like_state"
                android:visibility="gone"
                android:prompt="@string/book" />

            <TextView
                android:id="@+id/book_detail_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:textColor="@color/gray_light"
                android:text=""
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/par_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
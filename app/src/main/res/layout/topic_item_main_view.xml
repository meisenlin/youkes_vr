<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_button"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/photo"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_margin="2dip"
            android:adjustViewBounds="true"
            android:src="@drawable/icon"
            android:contentDescription="@string/empty"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/no_photo"
            android:layout_width="8dip"
            android:layout_height="48dip"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/layout_photo_right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="0dip"

                    android:layout_marginRight="8dip"
                    android:clickable="true"
                    android:text="用户名"
                    android:textColor="@color/gray_dark_blue"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/circle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="2dip"

                    android:clickable="true"
                    android:text="圈名"
                    android:textColor="@color/gray_dark_blue"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/floor_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:layout_marginRight="12dip"
                            android:layout_marginTop="2dip"

                            android:visibility="visible"
                            android:text="@string/first_floor"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>




            <TextView
                android:id="@+id/item_text"
                style="@style/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:maxLines="6"
                android:text="文本"
                />


            <LinearLayout
                android:id="@+id/link_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/select_button_gray"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="4dp"
                android:padding="4dp" >

                <TextView
                    android:id="@+id/link_title"
                    style="@style/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:singleLine="false" />


            </LinearLayout>

            <ImageView
                android:id="@+id/big_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:maxHeight="200dip"
                android:maxWidth="800dip"
                android:minWidth="160dp"
                android:minHeight="160dp"
                android:onClick="img_click"
                android:scaleType="fitStart"

                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/layout_images"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4.0dip"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/item_image_0"
                        style="@style/item_image" />

                    <ImageView
                        android:id="@+id/item_image_1"
                        style="@style/item_image" />

                    <ImageView
                        android:id="@+id/item_image_2"
                        style="@style/item_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/item_image_3"
                        style="@style/item_image" />

                    <ImageView
                        android:id="@+id/item_image_4"
                        style="@style/item_image" />

                    <ImageView
                        android:id="@+id/item_image_5"
                        style="@style/item_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/item_image_6"
                        style="@style/item_image" />

                    <ImageView
                        android:id="@+id/item_image_7"
                        style="@style/item_image" />

                    <ImageView
                        android:id="@+id/item_image_8"
                        style="@style/item_image" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1887"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="2dip"
                    android:textColor="@color/gray_dark_light"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="2dip"
                    android:textColor="@color/gray_dark_blue"
                    android:visibility="visible"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:layout_marginLeft="4dip"
                            android:layout_marginRight="12dip"
                            android:layout_marginTop="2dip"
                            android:textColor="@color/gray_dark_blue"
                            android:visibility="visible"
                            android:text="@string/topic_reply"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:layout_marginLeft="4dip"
                            android:layout_marginRight="12dip"
                            android:layout_marginTop="2dip"
                            android:textColor="@color/gray_dark_blue"
                            android:visibility="gone"
                            android:text="@string/comment"

                            android:textSize="14sp" />

                    </LinearLayout>


                </RelativeLayout>




            </LinearLayout>



        </LinearLayout>
    </LinearLayout>






    <View
        android:layout_marginTop="4dp"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffdddddd" />

</LinearLayout>
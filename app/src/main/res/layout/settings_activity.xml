<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:youkes="http://schemas.android.com/apk/res-auto"
    style="@style/NavPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E3E3"
    android:fadingEdge="none"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <com.youkes.vr.ui.view.SettingItem
            android:id="@+id/settings_new_msg_sound"
            style="@style/settings_item_layout_single"
            youkes:item_accessoryType="switchbutton"
            youkes:item_showDivider="true"
            youkes:item_titleText="@string/settings_new_msg_notification_sound" />

        <com.youkes.vr.ui.view.SettingItem
            android:id="@+id/settings_new_msg_shake"
            style="@style/settings_item_layout_single"
            youkes:item_accessoryType="switchbutton"
            youkes:item_showDivider="false"
            youkes:item_titleText="@string/settings_new_msg_notification_shake" />

        <com.youkes.vr.ui.view.SettingItem
            android:id="@+id/setting_exit"
            style="@style/settings_item_layout_single"

            youkes:item_showDivider="true"
            android:visibility="gone"
            youkes:item_titleText="@string/settings_exit_title" />

        <com.youkes.vr.ui.view.SettingItem
            android:layout_marginTop="16dp"
            android:id="@+id/setting_switch"
            style="@style/settings_item_layout_single"
            youkes:item_showDivider="false"
            youkes:item_titleText="@string/settings_switch_title" />
    </LinearLayout>

</ScrollView>